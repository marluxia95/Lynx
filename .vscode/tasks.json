{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake ${workspaceRoot}",
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": ["-j8"],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "dependsOn":["cmake"]
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["make"]
        }
    ]
}